<div class="flex flex-col h-screen w-screen overflow-hidden bg-gray-900 text-white">
  <header class="bg-gray-800 p-4">
    <h1 class="text-xl font-bold">Discovery UI</h1>
  </header>
  
  <div class="flex flex-1 overflow-hidden">
    <nav class="w-64 bg-gray-800 p-4 space-y-4">
      <button hx-get="/start-command?terminalId=terminal" hx-target="#terminal" hx-swap="innerHTML" class="w-full bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded">
          Run discovery
      </button>
      <button hx-get="/greet?name=test" hx-target="#terminal" hx-swap="innerHTML" class="w-full bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded">
          Greet
      </button>
      <button class="w-full bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded">
        Button 3
      </button>
      <button class="w-full bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded">
        Button 4
      </button>
    </nav>
    
    <main class="flex-1 p-4 overflow-hidden">
      <div class="h-full bg-black rounded-lg p-4 overflow-hidden flex flex-col">
        <div 
          id="terminal"
          class="flex-1 overflow-auto font-mono text-green-400 whitespace-pre-wrap break-words"
        >
        </div>
      </div>
    </main>

  </div>
</div>
