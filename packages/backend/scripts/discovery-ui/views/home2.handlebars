<style>
    .tab-content { display: none; }
    .tab-content:target { display: block; }
    #templates:target ~ #templates-tab,
    #projects:target ~ #projects-tab { 
        @apply border-indigo-500 text-indigo-600;
    }
</style>
<div class="container mx-auto p-4">
    <header class="mb-6">
        <h1 class="text-3xl font-bold text-center">Discovery UI</h1>
    </header>
    
    <div class="mb-4">
        <div class="border-b border-gray-200">
            <nav class="-mb-px flex">
                <a href="#templates" class="border-b-2 border-transparent py-4 px-6 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap" id="templates-tab">
                    Templates
                </a>
                <a href="#projects" class="border-b-2 border-transparent py-4 px-6 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap" id="projects-tab">
                    Projects
                </a>
            </nav>
        </div>
    </div>
    
    <div id="templates" class="tab-content flex">
        <div class="w-1/3 pr-4">
            <ul class="bg-white shadow overflow-hidden sm:rounded-md" id="templates-list">
                <li class="px-4 py-4 sm:px-6 hover:bg-gray-50 cursor-pointer"
                    hx-get="/api/template/1"
                    hx-target="#content-display">
                    Template 1
                </li>
                <li class="px-4 py-4 sm:px-6 hover:bg-gray-50 cursor-pointer"
                    hx-get="/api/template/2"
                    hx-target="#content-display">
                    Template 2
                </li>
            </ul>
        </div>
        <div class="w-2/3 bg-white p-6 rounded-lg shadow" id="content-display">
            <p>Select a template to view its content.</p>
        </div>
    </div>

    <div id="projects" class="tab-content flex">
        <div class="w-1/3 pr-4">
            <ul class="bg-white shadow overflow-hidden sm:rounded-md" id="projects-list">
                <li class="px-4 py-4 sm:px-6 hover:bg-gray-50 cursor-pointer"
                    hx-get="/api/project/1"
                    hx-target="#content-display">
                    Project 1
                </li>
                <li class="px-4 py-4 sm:px-6 hover:bg-gray-50 cursor-pointer"
                    hx-get="/api/project/2"
                    hx-target="#content-display">
                    Project 2
                </li>
            </ul>
        </div>
        <div class="w-2/3 bg-white p-6 rounded-lg shadow" id="content-display">
            <p>Select a project to view its content.</p>
        </div>
    </div>
</div>