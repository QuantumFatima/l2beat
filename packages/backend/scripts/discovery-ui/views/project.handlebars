<div class="text-center text-lg py-2 absolute w-screen pointer-events-none">
  Current project: <b>{{project}}</b> on <b>{{chain}}</b>
</div>

<div class="flex flex-1 overflow-hidden space-x-4">
  <nav class="w-64 bg-gray-800 p-4 space-y-4">
    <button hx-get="/partials/json-view" hx-target="#content" hx-swap="innerHTML" hx-trigger="click, load"
      class="w-full bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded">
      View discovered.json
    </button>
    <button hx-get="/partials/cli-terminal" hx-target="#content" hx-swap="innerHTML"
      class="w-full bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded">
      Run discovery
    </button>
    <button hx-get="/greet?name=test" hx-target="#terminal" hx-swap="innerHTML"
      class="w-full bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded">
      Greet
    </button>
    <button class="w-full bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded">
      Button 4
    </button>
  </nav>

  <main id="content" class="flex-1 p-4 overflow-hidden bg-gray-800">
  </main>
</div>