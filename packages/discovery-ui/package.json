{
  "name": "@l2beat/discovery-ui",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node -r esbuild-register src",
    "watch:js": "node --watch -r esbuild-register src",
    "watch:css": "yarn build:css --watch",
    "build:js": "tsc -p tsconfig.build.json",
    "build:css": "tailwindcss -i ./src/style.css -o ./static/style.css",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint:fix": "biome check --formatter-enabled=false --apply .",
    "lint": "biome check --formatter-enabled=false .",
    "test": "mocha"
  },
  "dependencies": {
    "@l2beat/discovery": "*",
    "@types/express": "^4.17.21",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "express": "^4.21.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.11"
  }
}
